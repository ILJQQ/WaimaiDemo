<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jikexueyuan.waimaidemo.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/section_style">
        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/tab_icon_home_selected"
            android:id="@+id/ivHome"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/tab_icon_dingdan"
            android:id="@+id/ivOrder"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/tab_icon_me"
            android:id="@+id/ivUser"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
