<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/llstoreItem"
    android:layout_height="110dp"
    android:paddingLeft="18dp">

    <ImageView
        android:id="@+id/ivStoreImage"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_height="80dp"
        android:layout_width="250dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:id="@+id/llStoreDetail"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llStoreTitle">

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tvStoreName"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="normal|bold"
                android:layout_width="match_parent"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llStoreData"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/ivStarOne"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:layout_width="2dp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:id="@+id/ivStarTwo"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:id="@+id/ivStarThree"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:id="@+id/ivStarFour"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:id="@+id/ivStarFive"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSold"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="45dp"
                android:id="@+id/tvLocation"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llStorePrice"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSellDetail"
                android:layout_weight="1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>